<Window x:Class="TicTacToe.Settings"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TicTacToe"
        mc:Ignorable="d"
        Title="Settings" Height="135" Width="300" ResizeMode="NoResize">
    <StackPanel Name="Texts" Orientation="Vertical">
        <TextBlock Name="Size">
            Size of board (NxN): N= <TextBox Name="GameSize" Width="50"></TextBox>
        </TextBlock>
        <TextBlock Name="Count">
            Number of  players          <TextBox Name="PlayerCount" Width="50"></TextBox>
        </TextBlock>
        <TextBlock Name="Resolution">
            Resolution: <TextBox Name="WidthNumber" Width="50"></TextBox>x<TextBox Name="HeightNumber" Width="50"></TextBox>
        </TextBlock>
        <TextBlock Name="Error"></TextBlock>
        <TextBlock HorizontalAlignment="Right"><Button Click="Button_Save">Save Changes</Button><Button Click="Button_Cancel" Margin="5,0,0,0">Cancel</Button></TextBlock>
    </StackPanel>
</Window>