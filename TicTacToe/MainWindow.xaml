<Window x:Class="TicTacToe.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TicTacToe"
        mc:Ignorable="d"
        Title="Tic Tac Toe" Height="350" Width="525">
    <StackPanel Orientation="Vertical">
        <Border BorderThickness="2" Background="AliceBlue">
            <StackPanel Name="Menu" Orientation="Horizontal">
                <Button Margin="1,1,1,1" Click="Button_NewGame">New Game</Button>
                <Button Margin="1,1,1,1">Settings</Button>
            </StackPanel>
        </Border>
        <Grid Name="Game"></Grid>
    </StackPanel>
</Window>
